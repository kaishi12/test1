@model Testing.ViewModels.ChuongTruyenModel

@{
    ViewBag.Title = "CapNhatChuong";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="padding">
    <div class="m-b">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/User/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="/Truyen/QuanLyTruyenDaTao">Danh sách truyện đã tạo</a></li>
            <li class="breadcrumb-item"><a href="/Truyen/QuanLyChuong/@ViewBag.Id">Danh sách chương </a></li>
            <li class="breadcrumb-item active">Cập nhật chương</li>
        </ol>
    </div>
        <div class="form">
            @using (Html.BeginForm("CapNhatChuong", "ChuongTruyen", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="m-b text-sm">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>

                <div class="row m-b">
                    <div class="col-sm-6 form-group">
                        <label>Thứ tự chương</label>
                        <input type="number" class="form-control" required id="ThutuChuong" name="ThutuChuong" data-parsley-error-message="Yêu cầu nhập thứ tự chương" value="@Model.ThutuChuong">
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Tên chương truyện</label>
                        <input type="text" class="form-control" id="TenChuong" name="TenChuong" required data-parsley-error-message="Yêu cầu nhập tên chương" value="@Model.TenChuong">

                    </div>
                </div>
                @*<div class="form-group col-sm-6 ">
