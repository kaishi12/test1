                                <option value="@item.MaLoaiTrang">@item.TenLoaiTrang</option>

                            }
                        </select>
                    </div>*@

                <button type="submit" class="md-btn md-raised m-b-sm w-xs blue">Lưu</button>
                @*<button type="button" class="md-btn md-raised m-b-sm w-xs blue"><a id="link" href="/ChuongTruyen/CapNhatTrang/?id=@Model.MaChuong&loaitrang=@ViewBag.MaLoaiTrang">Thêm trang</a></button>*@
            }
        </div>
