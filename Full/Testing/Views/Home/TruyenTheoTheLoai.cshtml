@using Testing.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Testing.ViewModels.TruyenTheoTheLoai>

@{
    ViewBag.Title = "TruyenTheoTheLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--======= SUB BANNER =========-->
<section class="sub-bnr" data-stellar-background-ratio="0.5">
    <div class="position-center-center">
        <div class="container">
            <h4>@ViewBag.TheLoai </h4>
            <ol class="breadcrumb">
                <li><a href="/Home/Index">Home</a></li>
                <li><a href="#.">Thể loại</a></li>
                <li class="active">@ViewBag.TheLoai</li>
            </ol>
        </div>
    </div>
</section>

<!-- Content -->
<div id="content">

    <!-- Popular Products -->
    <section class="shop-page padding-top-100 padding-bottom-100">
        <div class="container-full">
            <div class="item-fltr">
                <!-- short-by -->
                <div class="short-by"> Showing 1–10 of 20 results </div>
                <!-- List and Grid Style -->
                <div class="lst-grd">
                    <a href="#" id="list"><i class="flaticon-interface"></i></a> <a href="#" id="grid"><i class="icon-grid"></i></a>
                    <!-- Select -->
                    <select>
                        <option>Short By: New</option>
                        <option>Short By: New</option>
                        <option>Short By: New</option>
                        <option>Short By: New</option>
                        <option>Short By: New</option>
                    </select>
                </div>
            </div>

            <!-- Item -->
            <div id="products" class="arrival-block list-group">
                <div class="row">
                    <h6 style="text-align:center; font-size:20px">@ViewBag.ThongBao</h6>
                    @foreach (var truyen in Model)
                    {
                    <!-- Item -->
                        <div class="item">
                            <div class="img-ser">
                                <!-- Images -->
                                <div class="thumb">
                                    <img class="img-1" src="~/Truyen/@truyen.AnhBia" alt=""><img class="img-2" src="~/Truyen/@truyen.AnhBia" alt="">
                                    <!-- Overlay  -->
                                    <div class="overlay">
                                        <div class="position-center-center"> <a class="popup-with-move-anim" href="#@truyen.MaProject"><i class="icon-eye"></i></a> </div>
                                        <div class="add-crt"><a href="/Home/ThongTinTruyen/@truyen.MaProject"><i class="fa fa-paper-plane"></i> Đọc truyện</a></div>
                                    </div>
                                </div>

                                <!-- Item Name -->
                                <div class="item-name fr-grd"> <a href="/Home/ThongTinTruyen/@truyen.MaProject" class="i-tittle">@truyen.TenProject</a> <span class="price">@Html.Action("ChuongTruyenMoi", "Home", new { id = @truyen.MaProject })</span> @*<a class="deta animated fadeInRight" href="#.">Xem thông tin</a>*@ </div>
                                <!-- Item Details -->
                                <div class="cap-text">
                                    <div class="item-name">
                                        <a href="#." class="i-tittle">@truyen.TenProject</a> <span class="price">@Html.Action("ChuongTruyenMoi", "Home", new { id = @truyen.MaProject })</span>
                                        <!-- Stars -->
                                        <span class="stras"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star-half-o"></i> </span>
                                        <p>@truyen.MoTa</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <!-- Quick View -->
                        <div id="@truyen.MaProject" class="zoom-anim-dialog qck-inside mfp-hide">
                            <div class="row">
                                <div class="col-md-6">

                                    <!-- Images Slider -->
                                    <div class="images-slider">
                                        <ul class="slides">
                                            <li><img src="~/Truyen/@truyen.AnhBia" /></li>
                                            @*<li data-thumb="Truyen/01.jpg">  <img src="~/Truyen/01.jpg" /> </li>
                                                <li data-thumb="Truyen/01.jpg"> <img src="~/Truyen/01.jpg" /> </li>
                                                <li data-thumb="Truyen/01.jpg"> <img src="~/Truyen/01.jpg" /> </li>*@
                                        </ul>
                                    </div>
                                </div>

                                <!-- Content Info -->
                                <div class="col-md-6">
                                    <div class="contnt-info">
                                        <h3>@truyen.TenProject</h3>
                                        <ul class="item-owner">
                                            <li>Lượt xem:<span>@Html.Action("TongLuotView", "Home", new { id = @truyen.MaProject })</span></li>
                                            <li>Tác giả:<span> <a href="#." title="@truyen.TacGia">@truyen.TacGia</a></span></li>
                                            <li>Thể loại:<span> @Html.Action("TheLoaiTruyen", "Home", new { id = @truyen.MaProject })</span></li>
                                        </ul>
                                        <p>@truyen.MoTa</p>
                                        <!-- Btn  -->
                                        <div class="add-info">
                                            <a href="#." class="btn btn-inverse"><i class="icon-heart"></i></a> <a href="/Home/ThongTinTruyen/@truyen.MaProject" class="btn">Đọc truyện </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Pagination -->
            <ul class="pagination in-center">
                @Html.PagedListPager(Model, page => Url.Action("TruyenTheoTheLoai", new { page = page, @id = ViewBag.MaTheLoai }))
            </ul>

        </div>
    </section>
</div>

