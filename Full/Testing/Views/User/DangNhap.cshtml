@model Testing.ViewModels.DangNhapModel

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/ResAndLogLayout.cshtml";
}



<div class="form">
    <a href="/Home/Index" style="background: #000000; color: #ffffff; display: block;  text-decoration: none;
                                     padding: 15px;  font-size: 20px;  float: left;  width: 100%;  text-align: center;
                                     cursor: pointer;  transition: .5s ease;">Trang chủ<i class="fa fa-home"></i></a>
    <ul class="tab-group">
        <li>@Html.ActionLink("Đăng Ký", "DangKy", "User")</li>
        <li class="tab-content active">@Html.ActionLink("Đăng Nhập", "DangNhap", "User")</li>
    </ul>
    @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h2>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</h2>
        <div id="login">
            <div class="field-wrap">
                <label>
                    Tài Khoản<span class="req">*</span>
                </label>
                @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control" })
            </div>
            <div class="field-wrap">
                <label>
                    Mật Khẩu<span class="req">*</span>
                </label>
                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
            </div>
            <p class="forgot"><a href="#">Forgot Password?</a></p>
            <button type="submit" class="button button-block">Get Started</button>
        </div>

    }
</div>
<!-- /form -->
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="~/Content/js/index.js"></script>


