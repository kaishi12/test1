@model Testing.ViewModels.ThongTinCaNhan

<div class="p-a-md col-md-6">
        @if(Model.AnhDaiDien!=null)
        {
             <div class="form-group">
                <label>Ảnh đại diện</label>
                 <input type="hidden" id="AnhDaiDien" name="AnhDaiDien" value="@Model.AnhDaiDien" />
                <img src="~/Truyen/@Model.AnhDaiDien" width="600" height="300" />
            </div>
        }
        <div class="form-group">
            <div class="form-file">
                <input id="fileupload" name="fileupload"  type="file">
                <button class="btn white">Upload Ảnh</button>
            </div>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input id="Email" name="Email" type="email" class="form-control" value="@Model.Email" required  data-parsley-required-message = "Không được để trống" data-parsley-type-message = "Yêu cầu định dạng email" placeholder="Email" >
        </div>
        <div class="form-group">
            <label>Số điện thoại</label>
            <input id="SoDienThoai" name="SoDienThoai" type="text" class="form-control" required value="@Model.SoDienThoai" data-parsley-type = "number" data-parsley-type-message = "Chỉ được nhập số" data-parsley-required-message = "Không được để trống" placeholder="Số điện thoại" >
        </div>
        <input type="hidden" id="Ma" name="Ma" value="@Model.Ma" />
        <button type="submit" class="btn btn-info m-t">Cập nhật</button>
    
</div>
